---
import { useTranslations } from '../i18n/translations';

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang);
---

<section class="py-12 md:py-16 bg-white border-y border-neutral-100">
  <div class="container">
    <div class="text-center mb-8">
      <p class="text-sm font-medium text-neutral-500 uppercase tracking-wider">
        {t('trustedBy.title')}
      </p>
    </div>

    <!-- Logo grid -->
    <div class="flex flex-wrap items-center justify-center gap-8 md:gap-12 lg:gap-16">
      <!-- Logo placeholder 1 -->
      <div class="flex items-center justify-center h-8 md:h-10 opacity-50 hover:opacity-80 transition-opacity">
        <div class="flex items-center gap-2 text-neutral-400">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
          </svg>
          <span class="text-lg font-semibold tracking-tight">TechStart</span>
        </div>
      </div>

      <!-- Logo placeholder 2 -->
      <div class="flex items-center justify-center h-8 md:h-10 opacity-50 hover:opacity-80 transition-opacity">
        <div class="flex items-center gap-2 text-neutral-400">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          <span class="text-lg font-semibold tracking-tight">Rapidez</span>
        </div>
      </div>

      <!-- Logo placeholder 3 -->
      <div class="flex items-center justify-center h-8 md:h-10 opacity-50 hover:opacity-80 transition-opacity">
        <div class="flex items-center gap-2 text-neutral-400">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
          </svg>
          <span class="text-lg font-semibold tracking-tight">GlobalCom</span>
        </div>
      </div>

      <!-- Logo placeholder 4 -->
      <div class="flex items-center justify-center h-8 md:h-10 opacity-50 hover:opacity-80 transition-opacity">
        <div class="flex items-center gap-2 text-neutral-400">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
          <span class="text-lg font-semibold tracking-tight">UrbanHQ</span>
        </div>
      </div>

      <!-- Logo placeholder 5 -->
      <div class="flex items-center justify-center h-8 md:h-10 opacity-50 hover:opacity-80 transition-opacity">
        <div class="flex items-center gap-2 text-neutral-400">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          <span class="text-lg font-semibold tracking-tight">DataFlow</span>
        </div>
      </div>

      <!-- Logo placeholder 6 -->
      <div class="flex items-center justify-center h-8 md:h-10 opacity-50 hover:opacity-80 transition-opacity">
        <div class="flex items-center gap-2 text-neutral-400">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
          </svg>
          <span class="text-lg font-semibold tracking-tight">Sparkle</span>
        </div>
      </div>
    </div>
  </div>
</section>
