---
import { useTranslations } from '../i18n/translations';

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang);
---

<section id="services" class="section bg-white">
  <div class="container">
    <!-- Section header -->
    <div class="text-center mb-16 md:mb-20 max-w-3xl mx-auto">
      <span class="inline-block text-sm font-medium text-primary-500 uppercase tracking-wider mb-4">
        {t('experience.label')}
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-medium text-neutral-900 mb-6">
        {t('experience.title')}
      </h2>
    </div>

    <!-- Feature grid - 2x2 like Numeral -->
    <div class="grid md:grid-cols-2 gap-px bg-neutral-200 rounded-2xl overflow-hidden">
      <!-- Feature 1: Specialized Accountants -->
      <div class="bg-cream p-8 md:p-10 lg:p-12">
        <div class="mb-6">
          <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-medium text-neutral-900 mb-3">
            {t('experience.feature1.title')}
          </h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('experience.feature1.description')}
          </p>
        </div>

        <!-- Image placeholder -->
        <div class="relative mt-8">
          <div class="aspect-[4/3] rounded-xl bg-neutral-200 overflow-hidden shadow-lg">
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-sm text-neutral-400 uppercase tracking-wider">Screenshot</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 2: Effortless Collaboration -->
      <div class="bg-cream p-8 md:p-10 lg:p-12">
        <div class="mb-6">
          <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-medium text-neutral-900 mb-3">
            {t('experience.feature2.title')}
          </h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('experience.feature2.description')}
          </p>
        </div>

        <!-- Image placeholder -->
        <div class="relative mt-8">
          <div class="aspect-[4/3] rounded-xl bg-neutral-200 overflow-hidden shadow-lg">
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-sm text-neutral-400 uppercase tracking-wider">Screenshot</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 3: Insights & Recommendations -->
      <div class="bg-cream p-8 md:p-10 lg:p-12">
        <div class="mb-6">
          <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-medium text-neutral-900 mb-3">
            {t('experience.feature3.title')}
          </h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('experience.feature3.description')}
