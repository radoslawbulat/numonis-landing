---
import { useTranslations } from '../i18n/translations';

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang);
---

<section id="services" class="section bg-white">
  <div class="container">
    <!-- Section header -->
    <div class="text-center mb-16 md:mb-20 max-w-3xl mx-auto">
      <span class="inline-block text-sm font-medium text-primary-500 uppercase tracking-wider mb-4">
        {t('experience.label')}
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-medium text-neutral-900 mb-6">
        {t('experience.title')}
      </h2>
    </div>

    <!-- Feature grid - 2x2 like Numeral -->
    <div class="grid md:grid-cols-2 gap-px bg-neutral-200 rounded-2xl overflow-hidden">
      <!-- Feature 1: Specialized Accountants -->
      <div class="bg-cream p-8 md:p-10 lg:p-12">
        <div class="mb-6">
          <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-medium text-neutral-900 mb-3">
            {t('experience.feature1.title')}
          </h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('experience.feature1.description')}
          </p>
        </div>

        <!-- Specialized Accountants mockup -->
        <div class="relative mt-8">
          <div class="rounded-xl bg-gradient-to-br from-neutral-50 to-neutral-100 p-4 shadow-lg h-[250px] flex flex-col justify-center">
            <!-- Overlapping profile photos -->
            <div class="flex justify-center mb-6">
              <div class="flex -space-x-4">
                <img src="/images/profile1.png" alt="Accountant" class="w-16 h-16 rounded-full object-cover border-3 border-white shadow-md ring-2 ring-neutral-100" />
                <img src="/images/profile2.png" alt="Accountant" class="w-16 h-16 rounded-full object-cover border-3 border-white shadow-md ring-2 ring-neutral-100" />
                <img src="/images/profile3.png" alt="Accountant" class="w-16 h-16 rounded-full object-cover border-3 border-white shadow-md ring-2 ring-neutral-100" />
                <div class="w-16 h-16 rounded-full bg-primary-100 border-3 border-white shadow-md ring-2 ring-neutral-100 flex items-center justify-center">
                  <span class="text-sm font-semibold text-primary-700">+50</span>
                </div>
              </div>
            </div>
            <!-- Sector expertise tags -->
            <div class="flex flex-wrap justify-center gap-2">
              <span class="px-3 py-1.5 bg-white rounded-full text-xs font-medium text-neutral-700 shadow-sm">{t('mockup.sectors.retail')}</span>
              <span class="px-3 py-1.5 bg-white rounded-full text-xs font-medium text-neutral-700 shadow-sm">{t('mockup.sectors.healthcare')}</span>
              <span class="px-3 py-1.5 bg-white rounded-full text-xs font-medium text-neutral-700 shadow-sm">{t('mockup.sectors.tech')}</span>
              <span class="px-3 py-1.5 bg-white rounded-full text-xs font-medium text-neutral-700 shadow-sm">{t('mockup.sectors.agriculture')}</span>
              <span class="px-3 py-1.5 bg-white rounded-full text-xs font-medium text-neutral-700 shadow-sm">{t('mockup.sectors.professional')}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 2: Effortless Collaboration -->
      <div class="bg-cream p-8 md:p-10 lg:p-12">
        <div class="mb-6">
          <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-medium text-neutral-900 mb-3">
            {t('experience.feature2.title')}
          </h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('experience.feature2.description')}
          </p>
        </div>

        <!-- Collaboration chat mockup -->
        <div class="relative mt-8">
          <div class="rounded-xl bg-gradient-to-br from-neutral-50 to-neutral-100 p-4 shadow-lg h-[250px]">
            <div class="space-y-2.5 h-full flex flex-col justify-between">
              <!-- Chat message from accountant -->
              <div class="flex items-start gap-2">
                <img src="/images/profile1.png" alt="Accountant" class="w-7 h-7 rounded-full object-cover flex-shrink-0" />
                <div class="flex-1 bg-white rounded-lg p-2.5 shadow-sm">
                  <p class="text-xs text-neutral-700">{t('mockup.chat.accountant')}</p>
                  <p class="text-[10px] text-neutral-400 mt-1">10:32 AM</p>
                </div>
              </div>
              <!-- Chat message from user -->
              <div class="flex items-start gap-2 justify-end">
                <div class="flex-1 bg-primary-500 rounded-lg p-2.5 shadow-sm max-w-[85%]">
                  <p class="text-xs text-white">{t('mockup.chat.user')}</p>
                  <p class="text-[10px] text-primary-200 mt-1">10:35 AM</p>
                </div>
              </div>
              <!-- Task notification -->
              <div class="flex items-center gap-2 bg-green-50 rounded-lg p-2.5 border border-green-100">
                <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <p class="text-xs text-green-700">{t('mockup.chat.notification')}</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 3: Insights & Recommendations -->
      <div class="bg-cream p-8 md:p-10 lg:p-12">
        <div class="mb-6">
          <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-medium text-neutral-900 mb-3">
            {t('experience.feature3.title')}
          </h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('experience.feature3.description')}
          </p>
        </div>

        <!-- Real-time metrics 2x2 grid -->
        <div class="relative mt-8">
          <div class="rounded-xl bg-gradient-to-br from-neutral-50 to-neutral-100 p-4 shadow-lg h-[250px]">
            <div class="grid grid-cols-2 gap-2.5 h-full">
              <!-- Cash Balance -->
              <div class="bg-white rounded-lg p-3 shadow-sm">
                <p class="text-xs text-neutral-500 mb-1">{t('mockup.metrics.cashBalance')}</p>
                <p class="text-lg font-semibold text-neutral-900">€428,000</p>
                <div class="flex items-center gap-1 mt-1">
                  <svg class="w-3 h-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-xs text-green-600">+8.7%</span>
                </div>
              </div>

              <!-- Revenue -->
              <div class="bg-white rounded-lg p-3 shadow-sm">
                <p class="text-xs text-neutral-500 mb-1">{t('mockup.metrics.revenue')}</p>
                <p class="text-lg font-semibold text-neutral-900">€245,000</p>
                <div class="flex items-center gap-1 mt-1">
                  <svg class="w-3 h-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-xs text-green-600">+12.5%</span>
                </div>
              </div>

              <!-- Expenses -->
              <div class="bg-white rounded-lg p-3 shadow-sm">
                <p class="text-xs text-neutral-500 mb-1">{t('mockup.metrics.expenses')}</p>
                <p class="text-lg font-semibold text-neutral-900">€182,000</p>
                <div class="flex items-center gap-1 mt-1">
                  <svg class="w-3 h-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-xs text-green-600">-5.3%</span>
                </div>
              </div>

              <!-- Profit/Loss -->
              <div class="bg-white rounded-lg p-3 shadow-sm">
                <p class="text-xs text-neutral-500 mb-1">{t('mockup.metrics.profitLoss')}</p>
                <p class="text-lg font-semibold text-neutral-900">€63,000</p>
                <div class="flex items-center gap-1 mt-1">
                  <svg class="w-3 h-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-xs text-green-600">+18.2%</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 4: Business Health Score -->
      <div class="bg-cream p-8 md:p-10 lg:p-12">
        <div class="mb-6">
          <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-medium text-neutral-900 mb-3">
            {t('experience.feature4.title')}
          </h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('experience.feature4.description')}
          </p>
        </div>

        <!-- Business Health Score mockup -->
        <div class="relative mt-8">
          <div class="rounded-xl bg-gradient-to-br from-neutral-50 to-neutral-100 p-4 shadow-lg h-[250px] flex flex-col justify-between">
            <!-- Score and benchmark row -->
            <div class="flex items-center gap-5">
              <!-- Circular score gauge -->
              <div class="relative w-24 h-24 flex-shrink-0">
                <svg class="w-full h-full transform -rotate-90" viewBox="0 0 100 100">
                  <!-- Background track -->
                  <circle
                    cx="50"
                    cy="50"
                    r="42"
                    stroke="currentColor"
                    stroke-width="8"
                    fill="none"
                    class="text-neutral-200"
                  />
                  <!-- Progress arc (78%) -->
                  <circle
                    cx="50"
                    cy="50"
                    r="42"
                    stroke="currentColor"
                    stroke-width="8"
                    fill="none"
                    stroke-linecap="round"
                    stroke-dasharray="264"
                    stroke-dashoffset="58"
                    class="text-green-500"
                  />
                </svg>
                <!-- Score text centered -->
                <div class="absolute inset-0 flex flex-col items-center justify-center">
                  <span class="text-2xl font-semibold text-neutral-900">78</span>
                  <span class="text-xs text-neutral-400">/100</span>
                </div>
              </div>

              <!-- Benchmark info -->
              <div class="flex-1">
                <p class="text-xs text-neutral-500 mb-1.5">{t('mockup.healthScore.benchmarked')}</p>
                <p class="text-sm font-medium text-neutral-700 mb-2">{t('mockup.healthScore.category')}</p>
                <div class="flex items-center gap-1.5">
                  <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm font-medium text-green-600">{t('mockup.healthScore.change')}</span>
                </div>
              </div>
            </div>

            <!-- Insight callouts -->
            <div class="mt-4 space-y-2">
              <div class="bg-primary-50 rounded-lg p-2.5 border-l-2 border-primary-400">
                <div class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-primary-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M11 3a1 1 0 10-2 0v1a1 1 0 102 0V3zM15.657 5.757a1 1 0 00-1.414-1.414l-.707.707a1 1 0 001.414 1.414l.707-.707zM18 10a1 1 0 01-1 1h-1a1 1 0 110-2h1a1 1 0 011 1zM5.05 6.464A1 1 0 106.464 5.05l-.707-.707a1 1 0 00-1.414 1.414l.707.707zM5 10a1 1 0 01-1 1H3a1 1 0 110-2h1a1 1 0 011 1zM8 16v-1h4v1a2 2 0 11-4 0zM12 14c.015-.34.208-.646.477-.859a4 4 0 10-4.954 0c.27.213.462.519.476.859h4.002z" />
                  </svg>
                  <p class="text-xs text-neutral-700">
                    <span class="font-medium">{t('mockup.healthScore.insight1Label')}</span> {t('mockup.healthScore.insight1')}
                  </p>
                </div>
              </div>
              <div class="bg-primary-50 rounded-lg p-2.5 border-l-2 border-primary-400">
                <div class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-primary-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M11 3a1 1 0 10-2 0v1a1 1 0 102 0V3zM15.657 5.757a1 1 0 00-1.414-1.414l-.707.707a1 1 0 001.414 1.414l.707-.707zM18 10a1 1 0 01-1 1h-1a1 1 0 110-2h1a1 1 0 011 1zM5.05 6.464A1 1 0 106.464 5.05l-.707-.707a1 1 0 00-1.414 1.414l.707.707zM5 10a1 1 0 01-1 1H3a1 1 0 110-2h1a1 1 0 011 1zM8 16v-1h4v1a2 2 0 11-4 0zM12 14c.015-.34.208-.646.477-.859a4 4 0 10-4.954 0c.27.213.462.519.476.859h4.002z" />
                  </svg>
                  <p class="text-xs text-neutral-700">
                    <span class="font-medium">{t('mockup.healthScore.insight2Label')}</span> {t('mockup.healthScore.insight2')}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 5: AI Data Analyst -->
      <div class="bg-cream p-8 md:p-10 lg:p-12">
        <div class="mb-6">
          <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-medium text-neutral-900 mb-3">
            {t('experience.feature5.title')}
          </h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('experience.feature5.description')}
          </p>
        </div>

        <!-- Chat UI mockup -->
        <div class="relative mt-8">
          <div class="rounded-xl bg-neutral-100 p-4 shadow-lg h-[250px]">
            <div class="space-y-3 h-full flex flex-col justify-center">
              <div class="flex items-start gap-3">
                <div class="w-8 h-8 rounded-full bg-neutral-300 flex items-center justify-center flex-shrink-0">
                  <svg class="w-4 h-4 text-neutral-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="flex-1 bg-white rounded-lg p-3 shadow-sm">
                  <p class="text-sm text-neutral-700">"{t('mockup.aiChat.question')}"</p>
                </div>
              </div>
              <div class="flex items-start gap-3 pl-4">
                <div class="w-8 h-8 rounded-full bg-primary-500 flex items-center justify-center flex-shrink-0">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <div class="flex-1 bg-primary-50 rounded-lg p-3">
                  <p class="text-sm text-neutral-700">{t('mockup.aiChat.answer')} <span class="font-semibold">€127,450</span>{t('mockup.aiChat.answerDetail')}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 6: One Stop Service Shop -->
      <div class="bg-cream p-8 md:p-10 lg:p-12">
        <div class="mb-6">
          <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-medium text-neutral-900 mb-3">
            {t('experience.feature6.title')}
          </h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('experience.feature6.description')}
          </p>
        </div>

        <!-- Service icons grid -->
        <div class="relative mt-8">
          <div class="rounded-xl bg-neutral-100 p-4 shadow-lg h-[250px]">
            <div class="grid grid-cols-3 gap-3 h-full content-center">
              <div class="text-center">
                <div class="w-12 h-12 mx-auto rounded-xl bg-white shadow-sm flex items-center justify-center mb-2">
                  <svg class="w-5 h-5 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                  </svg>
                </div>
                <span class="text-xs text-neutral-600">{t('services.legal')}</span>
              </div>
              <div class="text-center">
                <div class="w-12 h-12 mx-auto rounded-xl bg-white shadow-sm flex items-center justify-center mb-2">
                  <svg class="w-5 h-5 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <span class="text-xs text-neutral-600">{t('services.hr')}</span>
              </div>
              <div class="text-center">
                <div class="w-12 h-12 mx-auto rounded-xl bg-white shadow-sm flex items-center justify-center mb-2">
                  <svg class="w-5 h-5 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                  </svg>
                </div>
                <span class="text-xs text-neutral-600">{t('services.marketing')}</span>
              </div>
              <div class="text-center">
