---
import { useTranslations } from '../i18n/translations';

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang);
---

<section id="services" class="section bg-white">
  <div class="container">
    <!-- Section header -->
    <div class="text-center mb-16 md:mb-20 max-w-3xl mx-auto">
      <span class="inline-block text-sm font-medium text-primary-500 uppercase tracking-wider mb-4">
        {t('experience.label')}
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-medium text-neutral-900 mb-6">
        {t('experience.title')}
      </h2>
    </div>

    <!-- Feature grid - 2x2 like Numeral -->
    <div class="grid md:grid-cols-2 gap-px bg-neutral-200 rounded-2xl overflow-hidden">
      <!-- Feature 1: Specialized Accountants -->
      <div class="bg-cream p-8 md:p-10 lg:p-12">
        <div class="mb-6">
          <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-medium text-neutral-900 mb-3">
            {t('experience.feature1.title')}
          </h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('experience.feature1.description')}
          </p>
        </div>

        <!-- Specialized Accountants mockup -->
        <div class="relative mt-8 p-8 rounded-3xl overflow-hidden">
          <!-- Background image -->
          <div class="absolute inset-0">
            <img src="/background.png" alt="" class="w-full h-full object-cover" />
          </div>
          <!-- Visualization overlay -->
          <div class="relative rounded-2xl bg-white/95 backdrop-blur-sm p-6 shadow-lg border border-neutral-100 h-[250px] flex flex-col justify-center">
            <!-- Overlapping profile photos -->
            <div class="flex justify-center mb-6">
              <div class="flex -space-x-4">
                <img src="/images/profile1.png" alt="Accountant" class="w-16 h-16 rounded-full object-cover border-3 border-white shadow-md ring-2 ring-neutral-100" />
                <img src="/images/profile2.png" alt="Accountant" class="w-16 h-16 rounded-full object-cover border-3 border-white shadow-md ring-2 ring-neutral-100" />
                <img src="/images/profile3.png" alt="Accountant" class="w-16 h-16 rounded-full object-cover border-3 border-white shadow-md ring-2 ring-neutral-100" />
                <div class="w-16 h-16 rounded-full bg-primary-100 border-3 border-white shadow-md ring-2 ring-neutral-100 flex items-center justify-center">
                  <span class="text-sm font-semibold text-primary-700">+50</span>
                </div>
              </div>
            </div>
            <!-- Sector expertise tags -->
            <div class="flex flex-wrap justify-center gap-2">
              <span class="px-3 py-1.5 bg-white rounded-full text-xs font-medium text-neutral-700 shadow-sm">{t('mockup.sectors.retail')}</span>
              <span class="px-3 py-1.5 bg-white rounded-full text-xs font-medium text-neutral-700 shadow-sm">{t('mockup.sectors.healthcare')}</span>
              <span class="px-3 py-1.5 bg-white rounded-full text-xs font-medium text-neutral-700 shadow-sm">{t('mockup.sectors.tech')}</span>
              <span class="px-3 py-1.5 bg-white rounded-full text-xs font-medium text-neutral-700 shadow-sm">{t('mockup.sectors.agriculture')}</span>
              <span class="px-3 py-1.5 bg-white rounded-full text-xs font-medium text-neutral-700 shadow-sm">{t('mockup.sectors.professional')}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 2: Effortless Collaboration -->
      <div class="bg-cream p-8 md:p-10 lg:p-12">
        <div class="mb-6">
          <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-medium text-neutral-900 mb-3">
            {t('experience.feature2.title')}
          </h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('experience.feature2.description')}
          </p>
        </div>

        <!-- File sharing mockup -->
        <div class="relative mt-8 p-8 rounded-3xl overflow-hidden">
          <!-- Background image -->
          <div class="absolute inset-0">
            <img src="/background.png" alt="" class="w-full h-full object-cover" />
          </div>
          <!-- Visualization overlay -->
          <div class="relative rounded-2xl bg-white/95 backdrop-blur-sm p-5 shadow-lg border border-neutral-100 h-[250px] flex flex-col justify-between">
            <div class="space-y-3">
              <!-- File from accountant -->
              <div>
                <div class="flex items-center gap-1.5 mb-1.5">
                  <svg class="w-3 h-3 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                  </svg>
                  <span class="text-[10px] text-neutral-500">{t('mockup.files.fromAccountant')}</span>
                </div>
                <div class="flex items-center gap-3 bg-white rounded-lg p-3 shadow-sm">
                  <div class="w-9 h-9 rounded-lg bg-red-50 flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-xs font-medium text-neutral-800 truncate">{t('mockup.files.vatReturn')}</p>
                    <p class="text-[10px] text-neutral-400">10:32 AM</p>
                  </div>
                  <span class="px-2 py-0.5 bg-green-100 text-green-700 text-[10px] font-medium rounded-full flex-shrink-0">{t('mockup.files.signed')}</span>
                </div>
              </div>

              <!-- File from user -->
              <div>
                <div class="flex items-center gap-1.5 mb-1.5">
                  <svg class="w-3 h-3 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                  </svg>
                  <span class="text-[10px] text-neutral-500">{t('mockup.files.fromYou')}</span>
                </div>
                <div class="flex items-center gap-3 bg-white rounded-lg p-3 shadow-sm">
                  <div class="w-9 h-9 rounded-lg bg-amber-50 flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-xs font-medium text-neutral-800 truncate">{t('mockup.files.receipts')}</p>
                    <p class="text-[10px] text-neutral-400">10:28 AM</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 3: Insights & Recommendations -->
      <div class="bg-cream p-8 md:p-10 lg:p-12">
        <div class="mb-6">
          <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-medium text-neutral-900 mb-3">
            {t('experience.feature3.title')}
          </h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('experience.feature3.description')}
          </p>
        </div>

        <!-- Monthly Gross Margin Chart -->
        <div class="relative mt-8 p-8 rounded-3xl overflow-hidden">
          <!-- Background image -->
          <div class="absolute inset-0">
            <img src="/background.png" alt="" class="w-full h-full object-cover" />
          </div>
          <!-- Visualization overlay -->
          <div class="relative rounded-2xl bg-white/95 backdrop-blur-sm p-5 shadow-lg border border-neutral-100 h-[250px] flex flex-col">
            <!-- Chart header -->
            <div class="flex items-center justify-between mb-4">
              <p class="text-xs font-medium text-neutral-700">{t('mockup.chart.title')}</p>
              <div class="flex items-center gap-3">
                <div class="flex items-center gap-1">
                  <div class="w-2 h-2 rounded-full bg-primary-500"></div>
                  <span class="text-[10px] text-neutral-500">{t('mockup.chart.revenue')}</span>
                </div>
                <div class="flex items-center gap-1">
                  <div class="w-2 h-2 rounded-full bg-secondary-400"></div>
                  <span class="text-[10px] text-neutral-500">{t('mockup.chart.expenses')}</span>
                </div>
                <div class="flex items-center gap-1">
                  <div class="w-2 h-2 rounded-full bg-green-500"></div>
                  <span class="text-[10px] text-neutral-500">{t('mockup.chart.profit')}</span>
                </div>
              </div>
            </div>

            <!-- Chart area - Line chart (6 months) -->
            <div class="flex-1 relative pb-4">
              <svg class="w-full h-full" viewBox="0 0 250 100" preserveAspectRatio="none">
                <defs>
                  <!-- Revenue gradient -->
                  <linearGradient id="revenueGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                    <stop offset="0%" stop-color="#797e5d" stop-opacity="0.3" />
                    <stop offset="100%" stop-color="#797e5d" stop-opacity="0.05" />
                  </linearGradient>
                  <!-- Expenses gradient -->
                  <linearGradient id="expensesGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                    <stop offset="0%" stop-color="#b87d64" stop-opacity="0.25" />
                    <stop offset="100%" stop-color="#b87d64" stop-opacity="0.05" />
                  </linearGradient>
                  <!-- Profit gradient -->
                  <linearGradient id="profitGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                    <stop offset="0%" stop-color="#10b981" stop-opacity="0.3" />
                    <stop offset="100%" stop-color="#10b981" stop-opacity="0.05" />
                  </linearGradient>
                </defs>

                <!-- Grid lines -->
                <line x1="0" y1="25" x2="250" y2="25" stroke="#e5e5e5" stroke-width="0.5" />
                <line x1="0" y1="50" x2="250" y2="50" stroke="#e5e5e5" stroke-width="0.5" />
                <line x1="0" y1="75" x2="250" y2="75" stroke="#e5e5e5" stroke-width="0.5" />

                <!-- Revenue area fill -->
                <polygon
                  fill="url(#revenueGradient)"
                  points="0,65 50,55 100,45 150,40 200,30 250,20 250,100 0,100"
                />
                <!-- Revenue line -->
                <polyline
                  fill="none"
                  stroke="#797e5d"
                  stroke-width="2.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  points="0,65 50,55 100,45 150,40 200,30 250,20"
                />

                <!-- Expenses area fill -->
                <polygon
                  fill="url(#expensesGradient)"
                  points="0,78 50,72 100,68 150,65 200,60 250,55 250,100 0,100"
                />
                <!-- Expenses line -->
                <polyline
                  fill="none"
                  stroke="#b87d64"
                  stroke-width="2.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  points="0,78 50,72 100,68 150,65 200,60 250,55"
                />

                <!-- Profit area fill -->
                <polygon
                  fill="url(#profitGradient)"
                  points="0,92 50,85 100,78 150,72 200,62 250,50 250,100 0,100"
                />
                <!-- Profit line -->
                <polyline
                  fill="none"
                  stroke="#10b981"
                  stroke-width="2.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  points="0,92 50,85 100,78 150,72 200,62 250,50"
                />

                <!-- Data point indicators for November -->
                <circle cx="200" cy="30" r="4" fill="#797e5d" />
                <circle cx="200" cy="60" r="4" fill="#b87d64" />
                <circle cx="200" cy="62" r="4" fill="#10b981" />

                <!-- Vertical indicator line -->
                <line x1="200" y1="25" x2="200" y2="100" stroke="#d1d5db" stroke-width="1" stroke-dasharray="3,3" />
              </svg>

              <!-- Tooltip for November -->
              <div class="absolute bg-white rounded-lg shadow-lg border border-neutral-100 p-2.5 text-left" style="left: 65%; top: -10px; transform: translateX(-50%);">
                <p class="text-[10px] font-medium text-neutral-700 mb-1.5">Nov 2024</p>
                <div class="space-y-1">
                  <div class="flex items-center justify-between gap-3">
                    <div class="flex items-center gap-1">
                      <div class="w-1.5 h-1.5 rounded-full bg-primary-500"></div>
                      <span class="text-[9px] text-neutral-500">{t('mockup.chart.revenue')}</span>
                    </div>
                    <span class="text-[9px] font-medium text-neutral-700">€84k</span>
                  </div>
                  <div class="flex items-center justify-between gap-3">
                    <div class="flex items-center gap-1">
                      <div class="w-1.5 h-1.5 rounded-full bg-secondary-400"></div>
                      <span class="text-[9px] text-neutral-500">{t('mockup.chart.expenses')}</span>
                    </div>
                    <span class="text-[9px] font-medium text-neutral-700">€52k</span>
                  </div>
                  <div class="flex items-center justify-between gap-3">
                    <div class="flex items-center gap-1">
                      <div class="w-1.5 h-1.5 rounded-full bg-green-500"></div>
                      <span class="text-[9px] text-neutral-500">{t('mockup.chart.profit')}</span>
                    </div>
                    <span class="text-[9px] font-medium text-green-600">€32k</span>
                  </div>
                </div>
              </div>

              <!-- X-axis labels -->
              <div class="absolute bottom-0 left-0 right-0 flex justify-between">
                {['Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'].map((month) => (
                  <span class="text-[9px] text-neutral-400">{month}</span>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 4: Business Health Score -->
      <div class="bg-cream p-8 md:p-10 lg:p-12">
        <div class="mb-6">
          <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-medium text-neutral-900 mb-3">
            {t('experience.feature4.title')}
          </h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('experience.feature4.description')}
          </p>
        </div>

        <!-- Business Health Score mockup -->
        <div class="relative mt-8 p-8 rounded-3xl overflow-hidden">
          <!-- Background image -->
          <div class="absolute inset-0">
            <img src="/background.png" alt="" class="w-full h-full object-cover" />
          </div>
          <!-- Visualization overlay -->
          <div class="relative rounded-2xl bg-white/95 backdrop-blur-sm p-6 shadow-lg border border-neutral-100 h-[250px] flex flex-col justify-between">
            <!-- Score and benchmark row -->
            <div class="flex items-center gap-5">
              <!-- Circular score gauge -->
              <div class="relative w-24 h-24 flex-shrink-0">
                <svg class="w-full h-full transform -rotate-90" viewBox="0 0 100 100">
                  <!-- Background track -->
                  <circle
                    cx="50"
                    cy="50"
                    r="42"
                    stroke="currentColor"
                    stroke-width="8"
                    fill="none"
                    class="text-neutral-200"
                  />
                  <!-- Progress arc (78%) -->
                  <circle
                    cx="50"
                    cy="50"
                    r="42"
                    stroke="currentColor"
                    stroke-width="8"
                    fill="none"
                    stroke-linecap="round"
                    stroke-dasharray="264"
                    stroke-dashoffset="58"
                    class="text-green-500"
                  />
                </svg>
                <!-- Score text centered -->
                <div class="absolute inset-0 flex flex-col items-center justify-center">
                  <span class="text-2xl font-semibold text-neutral-900">78</span>
                  <span class="text-xs text-neutral-400">/100</span>
                </div>
              </div>

              <!-- Benchmark info -->
              <div class="flex-1">
                <p class="text-xs text-neutral-500 mb-1.5">{t('mockup.healthScore.benchmarked')}</p>
                <p class="text-sm font-medium text-neutral-700 mb-2">{t('mockup.healthScore.category')}</p>
                <div class="flex items-center gap-1.5">
                  <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm font-medium text-green-600">{t('mockup.healthScore.change')}</span>
                </div>
              </div>
            </div>

            <!-- Insight callouts -->
            <div class="mt-4 space-y-2">
              <div class="bg-primary-50 rounded-lg p-2.5 border-l-2 border-primary-400">
                <div class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-primary-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M11 3a1 1 0 10-2 0v1a1 1 0 102 0V3zM15.657 5.757a1 1 0 00-1.414-1.414l-.707.707a1 1 0 001.414 1.414l.707-.707zM18 10a1 1 0 01-1 1h-1a1 1 0 110-2h1a1 1 0 011 1zM5.05 6.464A1 1 0 106.464 5.05l-.707-.707a1 1 0 00-1.414 1.414l.707.707zM5 10a1 1 0 01-1 1H3a1 1 0 110-2h1a1 1 0 011 1zM8 16v-1h4v1a2 2 0 11-4 0zM12 14c.015-.34.208-.646.477-.859a4 4 0 10-4.954 0c.27.213.462.519.476.859h4.002z" />
                  </svg>
                  <p class="text-xs text-neutral-700">
                    <span class="font-medium">{t('mockup.healthScore.insight1Label')}</span> {t('mockup.healthScore.insight1')}
                  </p>
                </div>
              </div>
              <div class="bg-primary-50 rounded-lg p-2.5 border-l-2 border-primary-400">
                <div class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-primary-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M11 3a1 1 0 10-2 0v1a1 1 0 102 0V3zM15.657 5.757a1 1 0 00-1.414-1.414l-.707.707a1 1 0 001.414 1.414l.707-.707zM18 10a1 1 0 01-1 1h-1a1 1 0 110-2h1a1 1 0 011 1zM5.05 6.464A1 1 0 106.464 5.05l-.707-.707a1 1 0 00-1.414 1.414l.707.707zM5 10a1 1 0 01-1 1H3a1 1 0 110-2h1a1 1 0 011 1zM8 16v-1h4v1a2 2 0 11-4 0zM12 14c.015-.34.208-.646.477-.859a4 4 0 10-4.954 0c.27.213.462.519.476.859h4.002z" />
                  </svg>
                  <p class="text-xs text-neutral-700">
                    <span class="font-medium">{t('mockup.healthScore.insight2Label')}</span> {t('mockup.healthScore.insight2')}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 5: AI Data Analyst -->
      <div class="bg-cream p-8 md:p-10 lg:p-12">
        <div class="mb-6">
          <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-medium text-neutral-900 mb-3">
            {t('experience.feature5.title')}
          </h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('experience.feature5.description')}
          </p>
        </div>

        <!-- Chat UI mockup -->
        <div class="relative mt-8 p-8 rounded-3xl overflow-hidden">
          <!-- Background image -->
          <div class="absolute inset-0">
            <img src="/background.png" alt="" class="w-full h-full object-cover" />
          </div>
          <!-- Visualization overlay -->
          <div class="relative rounded-2xl bg-white/95 backdrop-blur-sm p-6 shadow-lg border border-neutral-100 h-[250px] flex flex-col justify-center">
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <div class="w-8 h-8 rounded-full bg-neutral-300 flex items-center justify-center flex-shrink-0">
                  <svg class="w-4 h-4 text-neutral-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="flex-1 bg-white rounded-lg p-3 shadow-sm">
