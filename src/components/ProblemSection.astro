---
import { useTranslations } from '../i18n/translations';

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang);
---

<section id="problem" class="section bg-cream">
  <div class="container">
    <div class="max-w-4xl mx-auto">
      <!-- Section header -->
      <div class="text-center mb-12 md:mb-16">
        <span class="inline-block text-sm font-medium text-primary-500 uppercase tracking-wider mb-4">
          {t('problem.label')}
        </span>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-medium text-neutral-900 mb-6">
          {t('problem.title')}
        </h2>
      </div>

      <!-- Problem cards -->
      <div class="grid gap-6 md:gap-8">
        <!-- Problem 1 -->
        <div class="flex gap-4 md:gap-6">
          <div class="accent-bar flex-shrink-0"></div>
          <div class="card flex-1">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-secondary-50 flex items-center justify-center">
                <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg md:text-xl font-medium text-neutral-900 mb-2">
                  {t('problem.problem1.title')}
                </h3>
                <p class="text-neutral-600">
                  {t('problem.problem1.description')}
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Problem 2 -->
        <div class="flex gap-4 md:gap-6">
          <div class="accent-bar flex-shrink-0"></div>
          <div class="card flex-1">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-secondary-50 flex items-center justify-center">
                <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg md:text-xl font-medium text-neutral-900 mb-2">
                  {t('problem.problem2.title')}
                </h3>
                <p class="text-neutral-600">
                  {t('problem.problem2.description')}
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Problem 3 -->
        <div class="flex gap-4 md:gap-6">
          <div class="accent-bar flex-shrink-0"></div>
          <div class="card flex-1">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-secondary-50 flex items-center justify-center">
                <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg md:text-xl font-medium text-neutral-900 mb-2">
                  {t('problem.problem3.title')}
                </h3>
                <p class="text-neutral-600">
                  {t('problem.problem3.description')}
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Problem 4 -->
        <div class="flex gap-4 md:gap-6">
          <div class="accent-bar flex-shrink-0"></div>
          <div class="card flex-1">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-secondary-50 flex items-center justify-center">
                <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg md:text-xl font-medium text-neutral-900 mb-2">
                  {t('problem.problem4.title')}
                </h3>
                <p class="text-neutral-600">
                  {t('problem.problem4.description')}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Bottom statement -->
      <div class="mt-12 md:mt-16 text-center">
        <p class="text-lg md:text-xl text-neutral-700 font-medium">
          {t('problem.conclusion.line1')}<br />
          <span class="text-neutral-500 font-normal">{t('problem.conclusion.line2')}</span>
        </p>
      </div>
    </div>
  </div>
</section>
