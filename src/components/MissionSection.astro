---
import { useTranslations } from '../i18n/translations';

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang);
---

<section id="about" class="section bg-white">
  <div class="container">
    <!-- Section header -->
    <div class="text-center mb-12 md:mb-16 max-w-3xl mx-auto">
      <span class="inline-block text-sm font-medium text-primary-500 uppercase tracking-wider mb-4">
        {t('mission.label')}
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-medium text-neutral-900 mb-6">
        {t('mission.title')}
      </h2>
    </div>

    <div class="max-w-5xl mx-auto">
      <!-- Main mission statement -->
      <div class="bg-cream rounded-3xl p-8 md:p-12 lg:p-16 mb-12">
        <div class="max-w-3xl mx-auto text-center">
          <p class="text-xl md:text-2xl lg:text-3xl font-medium text-neutral-900 leading-relaxed mb-8">
            {t('mission.statement')}
          </p>
          <div class="w-16 h-1 bg-primary-400 mx-auto rounded-full"></div>
        </div>
      </div>

      <!-- How we do it -->
      <div class="grid md:grid-cols-2 gap-8 mb-16">
        <div class="bg-neutral-50 rounded-2xl p-8">
          <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-medium text-neutral-900 mb-3">{t('mission.transforming.title')}</h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('mission.transforming.description')}
          </p>
        </div>

        <div class="bg-neutral-50 rounded-2xl p-8">
          <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
            </svg>
          </div>
          <h3 class="text-lg font-medium text-neutral-900 mb-3">{t('mission.handling.title')}</h3>
          <p class="text-neutral-600 leading-relaxed">
            {t('mission.handling.description')}
          </p>
        </div>
      </div>

      <!-- Vision statement -->
      <div class="text-center mb-16 py-8 border-y border-neutral-200">
        <p class="text-xl md:text-2xl font-medium text-primary-600 mb-3">
          {t('mission.vision.headline')}
        </p>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          {t('mission.vision.description')}
        </p>
      </div>

      <!-- Values -->
      <div class="text-center mb-10">
        <h3 class="text-xl md:text-2xl font-medium text-neutral-900">{t('mission.values.title')}</h3>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="group bg-white border border-neutral-200 rounded-2xl p-6 hover:border-primary-300 hover:shadow-md transition-all">
          <div class="w-12 h-12 rounded-xl bg-primary-50 group-hover:bg-primary-100 flex items-center justify-center mb-4 transition-colors">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
          </div>
          <h4 class="font-medium text-neutral-900 mb-2">{t('mission.values.clarity.title')}</h4>
          <p class="text-sm text-neutral-600">{t('mission.values.clarity.description')}</p>
        </div>

        <div class="group bg-white border border-neutral-200 rounded-2xl p-6 hover:border-primary-300 hover:shadow-md transition-all">
          <div class="w-12 h-12 rounded-xl bg-primary-50 group-hover:bg-primary-100 flex items-center justify-center mb-4 transition-colors">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <h4 class="font-medium text-neutral-900 mb-2">{t('mission.values.customer.title')}</h4>
          <p class="text-sm text-neutral-600">{t('mission.values.customer.description')}</p>
        </div>

        <div class="group bg-white border border-neutral-200 rounded-2xl p-6 hover:border-primary-300 hover:shadow-md transition-all">
          <div class="w-12 h-12 rounded-xl bg-primary-50 group-hover:bg-primary-100 flex items-center justify-center mb-4 transition-colors">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h4 class="font-medium text-neutral-900 mb-2">{t('mission.values.trust.title')}</h4>
          <p class="text-sm text-neutral-600">{t('mission.values.trust.description')}</p>
        </div>

        <div class="group bg-white border border-neutral-200 rounded-2xl p-6 hover:border-primary-300 hover:shadow-md transition-all">
          <div class="w-12 h-12 rounded-xl bg-primary-50 group-hover:bg-primary-100 flex items-center justify-center mb-4 transition-colors">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h4 class="font-medium text-neutral-900 mb-2">{t('mission.values.innovation.title')}</h4>
          <p class="text-sm text-neutral-600">{t('mission.values.innovation.description')}</p>
        </div>
      </div>
    </div>
  </div>
</section>
