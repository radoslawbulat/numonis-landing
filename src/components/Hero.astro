---
import { useTranslations } from '../i18n/translations';

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang);
---

<section class="relative pt-32 pb-20 md:pt-40 md:pb-28 lg:pt-48 lg:pb-32 overflow-hidden">
  <!-- Background gradient with grain -->
  <div class="absolute inset-0 gradient-hero"></div>

  <div class="container relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Headline -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-medium text-neutral-900 mb-6 animate-fade-in-up">
        {t('hero.headline')} <span class="text-primary-500">Numonis</span>
      </h1>

      <!-- Subheadline -->
      <p class="text-xl md:text-2xl lg:text-3xl text-neutral-700 font-light mb-4 animate-fade-in-up" style="animation-delay: 0.1s">
        {t('hero.subheadline')}
      </p>

      <!-- Trust badges -->
      <div class="flex flex-wrap items-center justify-center gap-2 md:gap-4 text-sm md:text-base text-neutral-600 mb-8 animate-fade-in-up" style="animation-delay: 0.2s">
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-primary-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          {t('hero.globalStandards')}
        </span>
        <span class="text-neutral-300">|</span>
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-primary-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          {t('hero.localPresence')}
        </span>
        <span class="text-neutral-300">|</span>
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-primary-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          {t('hero.digital')}
        </span>
      </div>

      <!-- Secondary text -->
      <p class="text-base md:text-lg text-neutral-600 mb-10 max-w-2xl mx-auto animate-fade-in-up" style="animation-delay: 0.3s">
        {t('hero.peaceMind')}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in-up" style="animation-delay: 0.4s">
        <a href="#demo" class="btn btn-primary text-base px-8 py-4 w-full sm:w-auto">
          {t('hero.scheduleDemo')}
        </a>
        <a href="#contact" class="btn btn-outline text-base px-8 py-4 w-full sm:w-auto">
          {t('hero.talkToExpert')}
        </a>
      </div>
    </div>
  </div>

  <!-- Decorative elements -->
  <div class="absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-t from-cream to-transparent"></div>
</section>
