---
import { useTranslations } from '../i18n/translations';

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();

const footerLinks = {
  product: {
    title: t('footer.product'),
    links: [
      { label: t('footer.accountingServices'), href: '#services' },
      { label: t('footer.aiDataAnalyst'), href: '#' },
      { label: t('footer.businessHealthScore'), href: '#' },
      { label: t('footer.partnerNetwork'), href: '#' },
    ],
  },
  company: {
    title: t('footer.company'),
    links: [
      { label: t('footer.aboutUs'), href: '#about' },
      { label: t('footer.contact'), href: '#locations' },
    ],
  },
  resources: {
    title: t('footer.resources'),
    links: [
      { label: t('footer.faqs'), href: '#faq' },
    ],
  },
  legal: {
    title: t('footer.legal'),
    links: [
      { label: t('footer.privacyPolicy'), href: '#' },
      { label: t('footer.termsOfService'), href: '#' },
      { label: t('footer.cookiePolicy'), href: '#' },
    ],
  },
};

const homePath = lang === 'es' ? '/es/' : '/';
---

<footer id="contact" class="bg-neutral-900 text-white">
  <div class="container">
    <!-- Main footer content -->
    <div class="py-16 md:py-20">
      <div class="grid grid-cols-2 md:grid-cols-6 gap-8 lg:gap-12">
        <!-- Brand column -->
        <div class="col-span-2">
          <a href={homePath} class="inline-block mb-6">
            <img src="/numonis.svg" alt="Numonis" class="h-8 w-auto brightness-0 invert" />
          </a>
          <p class="text-neutral-400 text-sm mb-6 max-w-xs">
            {t('footer.tagline')}
          </p>
          <a
            href="mailto:hello@numonis.com"
            class="text-sm text-primary-400 hover:text-primary-300 transition-colors"
          >
            hello@numonis.com
          </a>
        </div>

        <!-- Product links -->
        <div>
          <h4 class="text-sm font-semibold text-white mb-4">{footerLinks.product.title}</h4>
          <ul class="space-y-3">
            {footerLinks.product.links.map((link) => (
              <li>
                <a href={link.href} class="text-sm text-neutral-400 hover:text-white transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Company links -->
        <div>
          <h4 class="text-sm font-semibold text-white mb-4">{footerLinks.company.title}</h4>
          <ul class="space-y-3">
            {footerLinks.company.links.map((link) => (
              <li>
                <a href={link.href} class="text-sm text-neutral-400 hover:text-white transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Resources links -->
        <div>
          <h4 class="text-sm font-semibold text-white mb-4">{footerLinks.resources.title}</h4>
          <ul class="space-y-3">
            {footerLinks.resources.links.map((link) => (
              <li>
                <a href={link.href} class="text-sm text-neutral-400 hover:text-white transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Legal links -->
        <div>
          <h4 class="text-sm font-semibold text-white mb-4">{footerLinks.legal.title}</h4>
          <ul class="space-y-3">
            {footerLinks.legal.links.map((link) => (
              <li>
                <a href={link.href} class="text-sm text-neutral-400 hover:text-white transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-neutral-800 py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-sm text-neutral-500">
          &copy; {currentYear} Numonis. {t('footer.allRightsReserved')}
        </p>

        <!-- Social links -->
        <div class="flex items-center gap-4">
          <a href="https://www.linkedin.com/company/numonis/" target="_blank" rel="noopener noreferrer" class="text-neutral-500 hover:text-white transition-colors" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
